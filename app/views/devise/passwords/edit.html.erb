<div class="bg-white p-8 rounded-lg mx-auto mt-10 shadow-lg w-full sm:w-96">
  <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Alterar sua senha</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mt-4">
      <%= f.label :password, "Nova senha", class: "block text-gray-700 font-medium" %><br />
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %> caracteres no mÃ­nimo)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mt-2 p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="field mt-4">
      <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-gray-700 font-medium" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="actions mt-4 mb-4">
      <%= f.submit "Alterar minha senha", class: "w-full bg-blue-500 text-white p-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
