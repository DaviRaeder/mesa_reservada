<h1 class="text-3xl font-semibold text-gray-800 mb-6">Deixe seu Feedback</h1>

<%= form_with url: user_feedbacks_path, method: :post, class: "space-y-6" do |f| %>
  <div class="field">
    <%= f.label :feedback, "Feedback", class: "block text-gray-700" %>
    <%= f.text_area :feedback, rows: 4, class: "w-full border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar Feedback", class: "bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
