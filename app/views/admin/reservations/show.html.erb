<h1 class="text-3xl font-semibold text-gray-800 mb-4">Reserva de <%= @reservation.user.name %></h1>

<p class="text-lg text-gray-700"><strong>Mesa:</strong> <%= @reservation.table.name %></p>
<p class="text-lg text-gray-700"><strong>Data de Início:</strong> <%= @reservation.start_time.strftime('%d/%m/%Y %H:%M') %></p>
<p class="text-lg text-gray-700"><strong>Data de Término:</strong> <%= @reservation.end_time.strftime('%d/%m/%Y %H:%M') %></p>

<h3 class="text-2xl font-semibold text-gray-800 mt-6">Feedback</h3>
<%= form_with url: feedback_admin_reservation_path(@reservation), method: :put, class: "mt-4" do |f| %>
  <%= f.text_area :feedback, rows: 4, class: "w-full border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  <div class="mt-4">
    <%= f.submit "Adicionar Feedback", class: "bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>
