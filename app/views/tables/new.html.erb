<div class="container mx-auto my-8 px-4">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Nova Mesa</h1>

  <%= form_with model: @table, url: admin_tables_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :identifier, 'Número da Mesa', class: 'block text-gray-700 font-medium' %>
      <%= f.text_field :identifier, class: 'mt-2 px-4 py-2 border border-gray-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
    </div>

    <div class="mb-4">
      <%= f.label :capacity, 'Capacidade', class: 'block text-gray-700 font-medium' %>
      <%= f.number_field :capacity, class: 'mt-2 px-4 py-2 border border-gray-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
    </div>

    <div class="mb-4">
      <%= f.label :status, 'Status', class: 'block text-gray-700 font-medium' %>
      <%= f.select :status, ['Disponível', 'Reservada', 'Fora de Serviço'], { prompt: 'Escolha o Status' }, class: 'mt-2 px-4 py-2 border border-gray-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
    </div>

    <div class="flex justify-between mt-6">
      <%= f.submit 'Criar Mesa', class: 'px-6 py-2 bg-green-600 text-white rounded-lg shadow hover:bg-green-500 cursor-pointer transition' %>
      <%= link_to 'Voltar', tables_path, class: 'px-6 py-2 bg-gray-600 text-white rounded-lg shadow hover:bg-gray-500 transition' %>
    </div>
  <% end %>
</div>
