<h1 class="text-3xl font-semibold text-gray-800 mb-6">Painel de Administração</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
  <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
    <h2 class="text-xl font-semibold text-gray-700">Reservas</h2>
    <p class="text-2xl font-bold text-gray-900"><%= @reservations_count %></p>
    <%= link_to "Ver Reservas", admin_reservations_path, class: "text-blue-500 hover:text-blue-600 mt-4 inline-block" %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
    <h2 class="text-xl font-semibold text-gray-700">Usuários</h2>
    <p class="text-2xl font-bold text-gray-900"><%= @users_count %></p>
    <%= link_to "Ver Usuários", admin_users_path, class: "text-blue-500 hover:text-blue-600 mt-4 inline-block" %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
    <h2 class="text-xl font-semibold text-gray-700">Mesas</h2>
    <p class="text-2xl font-bold text-gray-900"><%= @tables_count %></p>
    <%= link_to "Ver Mesas", admin_tables_path, class: "text-blue-500 hover:text-blue-600 mt-4 inline-block" %>
  </div>
</div>
