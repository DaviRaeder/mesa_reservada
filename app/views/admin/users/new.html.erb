<h1 class="text-3xl font-semibold text-gray-800 mb-6">Adicionar Novo Usuário</h1>

<%= form_with model: @user, url: admin_users_path, method: :post, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, 'Nome', class: 'block text-gray-700' %>
    <%= f.text_field :name, class: 'w-full border border-gray-300 rounded-md p-2' %>
  </div>

  <div class="mb-4">
    <%= f.label :email, 'Email', class: 'block text-gray-700' %>
    <%= f.email_field :email, class: 'w-full border border-gray-300 rounded-md p-2' %>
  </div>

  <div class="mb-4">
    <%= f.label :phone, 'Telefone', class: 'block text-gray-700' %>
    <%= f.text_field :phone, class: 'w-full border border-gray-300 rounded-md p-2' %>
  </div>

  <div class="mt-6">
    <%= f.submit 'Criar Usuário', class: 'bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600' %>
    <%= link_to 'Cancelar', admin_users_path, class: 'text-red-500 hover:text-red-600 ml-4' %>
  </div>
<% end %>
