<div class="bg-white p-8 rounded-lg mx-auto mt-10 shadow-lg w-full sm:w-96">
  <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Editar <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-4">
      <%= f.label :email, "E-mail", class: "block text-gray-700 font-medium" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mt-2 text-sm text-yellow-600">Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mt-4">
      <%= f.label :password, "Nova senha", class: "block text-gray-700 font-medium" %> <i>(deixe em branco se não quiser alterá-la)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @minimum_password_length %>
        <br />
        <em class="text-sm text-gray-500"><%= @minimum_password_length %> caracteres no mínimo</em>
      <% end %>
    </div>

    <div class="field mt-4">
      <%= f.label :password_confirmation, "Confirmar nova senha", class: "block text-gray-700 font-medium" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="field mt-4">
      <%= f.label :current_password, "Senha atual", class: "block text-gray-700 font-medium" %> <i>(precisamos da sua senha atual para confirmar as alterações)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-2 p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "Atualizar", class: "w-full bg-blue-500 text-white p-3 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <h3 class="text-xl font-semibold text-gray-700 mt-6">Cancelar minha conta</h3>

  <div class="mt-4 text-sm text-red-600">Está insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" }, method: :delete, class: "bg-red-500 text-white p-3 cursor-pointer rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 mt-4 mb-4 focus:ring-red-500" %></div>

  <%= link_to "Voltar", :back, class: "text-blue-500 hover:underline mt-4" %>
</div>
