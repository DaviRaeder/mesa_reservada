<h2 class="text-2xl font-semibold text-gray-700">Reenviar instruções de desbloqueio</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mt-4">
    <%= f.label :email, "E-mail", class: "block text-gray-700 font-medium" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 p-2 border border-gray-300 rounded-md" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Reenviar instruções de desbloqueio", class: "bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
